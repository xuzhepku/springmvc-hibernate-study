<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="me.xuzhe.model">

    <class name="HibernateUser" table="t_hibernateuser">
        <id name="id" column="HIBERNATEUSER_ID">
            <!--increment兼容mysql和oracle自动递增，mysql叫increment, oracle叫sequence-->
            <generator class="native"/>
        </id>
        <property name="username"/>
        <property name="password"/>
        <property name="nickname"/>

        <property name="bornDate" type="timestamp" column="BORN_DATE"/>
    </class>

</hibernate-mapping>
